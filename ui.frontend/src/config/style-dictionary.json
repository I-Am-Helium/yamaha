{
   "source": ["src/styles/tokens/source/*.json"],
   "platforms": {
      "scss": {
         "transformGroup": "scss",
         "prefix": "yh",
         "buildPath": "src/styles/base/",
         "files": [
            {
               "destination": "_colors.scss",
               "format": "scss/map-deep"
            }
         ],
         "options": {
            "outputReferences": true
         }
      }
   },
   "hooks": {
      "transformGroups": {
         "scss": ["size/pxToRem"]
      }
   }
}
